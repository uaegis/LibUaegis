<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/c_input_dialog_bg"
    android:padding="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="300.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="18.0sp"
        android:textColor="#ff333333"
        android:gravity="center"
        android:id="@+id/c_label_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="标题" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <TextView
            android:textSize="16.0sp"
            android:textColor="#ff333333"
            android:id="@+id/c_label_dialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/g_dialog_mid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="16.0sp"
                android:id="@+id/uaegis_c_text_dialog_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:hint="请输入信息"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:weightSum="2.0">
            <Button
                android:id="@+id/uaegis_c_btn_dialog_ok"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="确定" android:layout_weight="1.0" />
            <Button
                android:id="@+id/uaegis_c_btn_dialog_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="取消" android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>